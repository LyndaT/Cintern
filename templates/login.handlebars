<div id="signin">
  <a href="#" id="home-link">Back to Home</a>
  <h1>Login</h1>
  <div class="error">
    {{#if error}}
      {{error}}
    {{/if}}
  </div>

  <ul class="nav nav-tabs" id="login-menu">
    <li role="presentation" class="active" data-toggle="tab" id="s-login-nav"><a>Student</a></li>
    <li role="presentation" data-toggle="tab" id="e-login-nav"><a>Employer</a></li>
  </ul>

  <br>
  
  <form id="login-form" class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-xs-2">Email:</label>
      <div class="col-xs-6">
        <input class="form-control" type="text" name="email" required placeholder="Email"/>
      </div>
    </div>
    <div class = "form-group">
      <label class="control-label col-xs-2">Password:</label>
      <div class="col-xs-6">
        <input class="form-control" type="password" name="password" required placeholder="Password"/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-6">
        <input class="btn btn-primary" type="submit" />
      </div>
    </div> 
  </form>
</div>
