<div>

  <!-- Custom Modal -->
  <div class="modal fade" id="customModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Custom Application</h4>
        </div>
        <div class="modal-body" id="custom-modal-content"></div>
      </div>
    </div>
  </div>

  <h1>Welcome!</h1>
  You currently have {{apps.length}} applications.

  <br>
  <br>
  
  {{> filter_bar}}
  
  <table class="table table-hover table-condensed tablesorter" id="s-dash-table">
  	
    <thead class="clickable-headers">
  	  <th>Company</th>
  	  <th>Title</th>
      <th>Deadline</th>
      <th>Submitted Time</th>
  	  <th>Status</th>
  	</thead>

    <tbody class="searchable">
      {{#each apps}}
        {{> s_dash_page_app this }} 
        
      {{else}}
        <tr>
        	<td>No applications yet!</td>
        </tr>
      {{/each}}
    </tbody>
  
  </table>
</div>