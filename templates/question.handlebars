<div class="question">
	<label class="control-label">{{question}}</label>
	<textarea 
		{{#if isCommon}}
			rows="1"
		{{else}}
		{{/if}}
		
		{{#if isSubmitted}}
			disabled 
		{{else}}
		{{/if}}
		
		{{#if required}}
			required
		{{else}}
		{{/if}}
		
		class="form-control" name="{{_id}}">{{answer}}</textarea>
</div>