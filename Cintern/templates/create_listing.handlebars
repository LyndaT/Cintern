<a href="/" id="home-link">Back to Dash</a>
  
<form id="create-listing">
	Create a listing here!
	
	<br>
	Position Title: <input type="text" name="title">
	
	<div id="add-description">
		Description
		<br>
		<textarea 
			rows="8" 
			cols="50" 
			name="description" 
			form="create-listing" 
			placeholder="Enter description here..."></textarea>
	</div>
	<br>
	<div id="add-requirements">
		Requirements
		<br>
		<textarea 
			rows="8" 
			cols="50" 
			name="requirements" 
			form="create-listing"
			placeholder="Enter requirements here..."></textarea>
	</div>
	<br>
	<div id="questions">
		Questions:
		<div id="question-list"></div>
		<button class="btn btn-primary" id="add-question">Add Question</button>
	</div>
	<br>
	<button type="submit" id="submit-listing-btn" class="btn btn-primary">Submit</button>
</form>
