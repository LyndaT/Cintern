<a href="/" id="home-link">Back to Dash</a>
  
<form id="create-listing">
	Create a listing here!
	
	<br>

	Position Title: <input type="text" name="title">
	
	<div>
		Description
		<br>
		<textarea 
			rows="8" 
			cols="50" 
			name="description" 
			form="create-listing" 
			placeholder="Enter description here..."></textarea>
	</div>

	<br>

	<div>
		Requirements
		<br>
		<textarea 
			rows="8" 
			cols="50" 
			name="requirements" 
			form="create-listing"
			placeholder="Enter requirements here..."></textarea>
	</div>

	<div>
        Deadline
        <br>
        <div class="form-group">
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" name="deadline" required/>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>

	<br>

	<div>
		Questions:
		<div id="question-list"></div>
		<div class="dropdown-hover">

		    <!-- trigger button -->
		    <button type="button" class="btn btn-primary">Add Question</button>

		    <!-- dropdown menu -->
		    <ul class="dropdown-menu">
		        <li class="clickable"><a id="add-text-question">Text Question</a></li>
		        <!-- <li class="clickable"><a id="add-dropdown-question">Dropdown Question</a></li> -->
		        <li class="clickable"><a id="add-check-question">Checkbox Question</a></li>
		    </ul>
		</div>
	</div>

	<br>

	<br>
	<button type="submit" class="btn btn-primary">Submit</button>

</form>
