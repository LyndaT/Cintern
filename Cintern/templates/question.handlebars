<div class="question" id="{{_id}}" data-type="{{type}}"> 
	<label class="control-label">{{question}}</label>
	{{#if required}}
		<span class="required">*</span>
	{{else}}
	{{/if}}

	{{#equal type "text"}}	
		<textarea 
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}
			
			{{#if required}}
				required
			{{else}}
			{{/if}}
			
			class="form-control" name="{{_id}}">{{answer}}</textarea>
	{{/equal}}

	{{#equal type "dropdown"}}
		<select name="{{_id}}"
			class="form-control"
			{{#if required}}
				required
			{{else}}
			{{/if}}
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}>
			
			<option
				{{#equal answer ""}}
					selected
				{{/equal}}
			>
				
			</option>
			{{#each options}}
				<option value="{{this}}" 
					{{#equal ../answer this}}
						selected
					{{/equal}}
				>
					{{this}}
				</option>
			{{else}}
			{{/each}}

		</select>
	{{/equal}}

	{{#equal type "radio"}}
		<input 
			type="radio" name="{{_id}}" value="yes"
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}
			{{#equal answer "yes"}}
				checked
			{{/equal}}>Yes
		<input 
			type="radio" name="{{_id}}" value="no"
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}
			{{#equal answer "no"}}
				checked
			{{/equal}}>No
		
	{{/equal}}
</div>