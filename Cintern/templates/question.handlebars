<div class="question" id="{{_id}}" data-type="{{type}}"> 
	{{#equal type "text"}}
		<label class="control-label">{{question}}</label>
		
		<textarea 
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}
			
			{{#if required}}
				required
			{{else}}
			{{/if}}
			
			class="form-control" name="{{_id}}">{{answer}}</textarea>
	{{/equal}}

	{{#equal type "dropdown"}} {{question}}
		<select name="{{_id}}"
			class="form-control"
			{{#if required}}
				required
			{{else}}
			{{/if}}
			{{#if isInProgress}} 
			{{else}}
				disabled
			{{/if}}>
			
			<option
				{{#equal answer ""}}
					selected
				{{/equal}}
			>
				
			</option>
			{{#each options}}
				<option value="{{this}}" 
					{{#equal ../answer this}}
						selected
					{{/equal}}
				>
					{{this}}
				</option>
			{{else}}
			{{/each}}

		</select>
	{{/equal}}

