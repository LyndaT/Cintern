<div>

  <h1>Current available listings</h1>
  <p>Click on a listing for more detailed information.</p>
  <br>

  <div class="error" id="error">
    {{#if error}}
      {{error}}
    {{/if}}
  </div>

  <table class="table table-hover table-condensed row-clickable">

    <thead>
      <th>Company</th>
      <th>Position</th>
      <th>Deadline</th>
    </thead>

    <tbody>
      {{#each listings}}
        {{> listing this submitted=../submitted}}
      {{else}}
        <tr>
          <td>No listings available</td>
        </tr>
      {{/each}}
    </tbody>

  </table>
</div>
